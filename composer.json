        "psalm": "psalm.phar",
        "psalm:clear": "psalm.phar --clear-cache && psalm.phar --clear-global-cache"
	},
    "require-dev": {
        "nextcloud/coding-standard": "^1.1",
        "phpunit/phpunit": "^9.0.0",
        "nextcloud/ocp": "dev-master",
